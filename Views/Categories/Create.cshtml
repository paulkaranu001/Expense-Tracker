@model Expense_Tracker.Models.Category

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Category</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <div class='e-btn-group custom-rbt-group'>
                    <input type="radio" id="radioleft" name="Type" value="Expense" checked="@(Model.Type=="Expense")" />
                    <label class="e-btn" for="radioleft">Expense</label>
                    <input type="radio" id="radiomiddle" name="Type" value="Income" checked="@(Model.Type=="Expense")" />
                    <label class="e-btn" for="radiomiddle">Income</label>
                    <span asp-validation-for="Type" class="text-danger"></span>
                </div>
             </div>

            <div class="mb-3">
                <ejs-textbox id="title" placeholder="Title" cssClass=" e-bigger"  ejs-for="Title" floatLabelType="Always"></ejs-textbox>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <ejs-textbox id="Icon" placeholder="Icon" cssClass=" e-bigger" ejs-for="Icon" floatLabelType="Always"></ejs-textbox>                
                <span asp-validation-for="Icon" class="text-danger"></span>
            </div>
           
            <div class="mb-3">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
